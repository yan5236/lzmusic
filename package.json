{
  "name": "lzmusic",
  "version": "1.0.5-beta",
  "description": "基于 Bilibili API 的音乐播放器",
  "main": "main.js",
  "scripts": {
    "start": "cross-env FORCE_COLOR=true electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "build-linux": "electron-builder --linux --x64",
    "build-mac": "electron-builder --mac --x64",
    "build-all": "electron-builder --win --linux --mac --x64",
    "build-test": "electron-builder --win --x64 --config.directories.output=exe",
    "dev": "cross-env FORCE_COLOR=true NODE_ENV=development electron . --enable-logging",
    "dev-win": "chcp 65001 && set FORCE_COLOR=true && set NODE_ENV=development && electron . --enable-logging",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-sqlite": "npm rebuild sqlite3 --build-from-source"
  },
  "author": "lzmusic",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "NeteaseCloudMusicApi": "^4.27.0",
    "smart-buffer": "^4.2.0",
    "sqlite3": "5.1.6"
  },
  "build": {
    "appId": "com.lzmusic.app",
    "productName": "LZ Music",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.bin"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "LZ-Music-${version}-Setup.exe",
      "shortcutName": "LZ Music",
      "uninstallDisplayName": "LZ Music"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "AudioVideo"
    },
    "appImage": {
      "artifactName": "LZ-Music-${version}.AppImage"
    },
    "deb": {
      "artifactName": "LZ-Music-${version}.deb"
    },
    "rpm": {
      "artifactName": "LZ-Music-${version}.rpm"
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "category": "public.app-category.music"
    },
    "dmg": {
      "artifactName": "LZ-Music-${version}.dmg",
      "title": "LZ Music ${version}"
    }
  }
}
