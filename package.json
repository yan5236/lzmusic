{
  "name": "lzmusic",
  "private": true,
  "version": "2.1.0",
  "description": "一个基于 Electron 的音乐播放器",
  "author": {
    "name": "yan5236",
    "email": "82815557+yan5236@users.noreply.github.com"
  },
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:dist": "npm run build:react && npm run build:electron && electron .",
    "dev:react": "vite dev",
    "dev:electron": "chcp 65001 && npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:electron",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.7",
    "@tailwindcss/vite": "^4.1.18",
    "better-sqlite3": "^12.5.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.562.0",
    "music-metadata": "^11.10.6",
    "NeteaseCloudMusicApi": "^4.28.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^17.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  }
}
